{
  "name": "@zyntra-js/adapter-opentelemetry",
  "version": "0.2.4",
  "description": "OpenTelemetry adapter for ZyntraJS telemetry system",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest"
  },
  "dependencies": {
    "@zyntra-js/core": "*"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/exporter-jaeger": "^1.25.0",
    "@opentelemetry/exporter-prometheus": "^0.202.0",
    "@opentelemetry/exporter-otlp-http": "^0.202.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/exporter-jaeger": {
      "optional": true
    },
    "@opentelemetry/exporter-prometheus": {
      "optional": true
    },
    "@opentelemetry/exporter-otlp-http": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.0",
    "@opentelemetry/resources": "^1.25.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "@opentelemetry/sdk-trace-node": "^1.25.0",
    "@opentelemetry/exporter-jaeger": "^1.25.0",
    "@opentelemetry/exporter-otlp-http": "latest",
    "@opentelemetry/sdk-metrics": "^1.25.0",
    "@opentelemetry/exporter-prometheus": "^0.202.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "zyntra",
    "opentelemetry",
    "telemetry",
    "observability",
    "tracing",
    "metrics"
  ],
  "author": "Matheus Pereira <matheus.pereira@lge.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheuszwilk/zyntra-js.git",
    "directory": "packages/adapter-opentelemetry"
  },
  "bugs": {
    "url": "https://github.com/matheuszwilk/zyntra-js/issues"
  },
  "homepage": "https://github.com/matheuszwilk/zyntra-js#readme"
}
